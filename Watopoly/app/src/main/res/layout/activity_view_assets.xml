<?xml version="1.0" encoding="utf-8"?>
<!-- to do: ADD RIPPLE EFFECt? or some sort of push button effect -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/playerInfoHeaderFragmentAssets"
        android:name="com.example.watopoly.fragment.PlayerInfoHeaderFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <LinearLayout
        android:id="@+id/linear_layout_assets"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp">

        <ToggleButton
            android:id="@+id/myAssetsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textOn="My Assets"
            android:textOff="My Assets"
             />

        <ToggleButton
            android:id="@+id/allAssetsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textOn="All Assets"
            android:textOff="All Assets"
             />
    </LinearLayout>

    <fragment
        android:id="@+id/propertyCardBuyFragmentViewMyAssets"
        class="com.example.watopoly.fragment.MyAssetsFragment"
        android:layout_width="match_parent"
        android:layout_height="330dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout="@layout/fragment_my_assets" />
    <RelativeLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|end">
        <Button
            android:id="@+id/back_to_board"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/return_to_board_button"
            android:gravity="center"
            android:stateListAnimator="@null"
            android:elevation="3dp"
            tools:ignore="HardcodedText,UnusedAttribute"/>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>