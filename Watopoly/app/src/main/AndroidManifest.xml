<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.watopoly">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:screenOrientation="landscape"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.DisplayPlayerOrderActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activity.RollToGoFirstActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activity.MainMenuActivity"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.EnterPlayerInfoActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activity.NumberOfPlayersActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activity.MainGameViewActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activity.ChanceCardActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activity.ViewAssetsActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activity.JailOptionsActivity"
            android:screenOrientation="landscape" />
        <activity android:name=".activity.BuyHouseHotelActivity"
            android:screenOrientation="landscape" />
    </application>

</manifest>